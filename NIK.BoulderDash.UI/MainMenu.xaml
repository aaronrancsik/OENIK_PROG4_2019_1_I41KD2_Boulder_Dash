        <BooleanToVisibilityConverter x:Key="booleanVisibleConverter" />
    </Window.Resources>
    <Viewbox Name="MainViewbox" Stretch="Uniform">
        <Grid Width="1152" Height="720">
            <Grid x:Name="map" Width="1152" Height="720">

            </Grid>
            <Grid Width="1152" Height="720" x:Name="grid" RenderOptions.BitmapScalingMode="NearestNeighbor" >
                <Grid.Background>
                    <ImageBrush ImageSource="/Images/cover_00005.png"></ImageBrush>
                </Grid.Background>
            </Grid>
            <Grid Width="1152" Height="720">

                <ListBox 
                    KeyDown="LbMain_KeyDown"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Center"
                    BorderThickness="0"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                    Background="Transparent"  
                    Margin="50,590,50,60" 
                    x:Name="lbMain"
                     SelectionChanged="LbMain_Selected"
                 RenderOptions.BitmapScalingMode="NearestNeighbor" FontFamily="Algerian" FontSize="72">
                    
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type local:MyMenuItem}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock 
                            Foreground="White"
                            FontSize="40"
                            Margin="3" 
                            Text="{Binding Name}"
                            />
                                <!--<Image
                            RenderOptions.BitmapScalingMode="NearestNeighbor"
                            Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}, Path=IsSelected, Converter={StaticResource booleanVisibleConverter}}" 
                            Margin="3" 
                            Source="{Binding Pa}"/>-->
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
    </Viewbox>
    
